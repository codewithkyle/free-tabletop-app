{
    "scripts": {
        "reset": "rm -rf ./Client/wwwroot/css && mkdir ./Client/wwwroot/css && rm -rf ./Client/wwwroot/js && mkdir ./Client/wwwroot/js",
        "build": "npm run reset && npm-run-all build:* && npm run start:server",
        "build:brixi": "brixi && mv ./brixi/brixi.css ./Client/scss/brixi.css && rmdir ./brixi",
        "build:css": "cssmonster",
        "build:js": "tsc",
        "build:client": "dotnet build ./Client",
        "start": "npm run start:server",
        "start:client": "dotnet run --project ./Client",
        "start:server": "dotnet run --project ./Server",
        "production": "npm run reset && npm-run-all build:* && dotnet build && rm -rf ./public/publish && dotnet publish -c Release --self-contained -r linux-x64 && cp -r ./Server/bin/Release/netcoreapp3.1/linux-x64/publish/ ./public"
    },
    "dependencies": {
        "@codewithkyle/notifyjs": "^2.0.3",
        "brixi": "^0.2.2",
        "cssmonster": "^0.2.1",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.0.3"
    }
}
