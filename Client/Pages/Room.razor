            </button>
        </moveable-handle>
        @if (Tabletop.Players.Count != 0){
            @if (Tabletop.IsGameMaster){
                <div class="container">
                    <div>
                        @for (int i = 0; i < Tabletop.Players.Count; i++){
                            PlayerEntity Player = Tabletop.Players[i];
                            <button title="@Player.Name" class="chat-toggle-button @(Player.UID == ActiveChatPlayerUID ? "is-active" : "")" @onclick="@(e => SetActivePlayerUID(Player.UID))">
                                @Player.Name
                                @if (Player.UnreadMessages){
                                    <i class="badge"></i>
                                }
                            </button>
                        }
                    </div>
                    <div>
                        @if (ActiveChatPlayerUID != null){
                            @for (int i = 0; i < Tabletop.Players.Count; i++){
                                PlayerEntity Player = Tabletop.Players[i];
                                if (Player.UID == ActiveChatPlayerUID){
                                    <ul class="js-chat-messages">
                                        <li class="font-xs font-grey-700 text-center py-0.5">Beginning of message history with @Player.Name.</li>
                                        @if (Player.Messages.Count > 0){
                                            @for (int k = 0; k < Player.Messages.Count; k++){
                                                <li class="@(Player.Messages[k].Author == "GM" ? "outgoing" : "incoming")">
                                                    <span class="msg">@Player.Messages[k].Msg</span>
                                                    <span class="author">@Player.Messages[k].Author</span>
                                                </li>
                                            }
                                        }
                                    </ul>
                                    <textarea placeholder="Send @Player.Name a message..." class="js-messenger-input" @onkeyup="@(e => SendMessage(e.Key))"></textarea>
                                }
                            }
                        }else{
                            <p class="font-xs font-grey-700 w-full h-full" flex="items-center justify-center">
                                <span class="inline-block">Select a player to begin sending messages.</span>
                            </p>
                        }
                    </div>
                </div>
            }else{
                <div class="container -player">
                    <ul class="js-chat-messages">
                        <li class="font-xs font-grey-700 text-center py-0.5">Beginning of Game Master message history.</li>
                        @if (Tabletop.Messages.Count > 0){
                            @for (int k = 0; k < Tabletop.Messages.Count; k++){
                                <li class="@(Tabletop.Messages[k].Author == "GM" ? "incoming" : "outgoing")">
                                    <span class="msg">@Tabletop.Messages[k].Msg</span>
                                    <span class="author">@Tabletop.Messages[k].Author</span>
                                </li>
                            }
                        }else{
                        }
                    </ul>
                    <textarea placeholder="Send the Game Master a message..." class="js-messenger-input" @onkeyup="@(e => SendMessage(e.Key))"></textarea>
                </div>
            }
        }else{
            @if (Tabletop.IsGameMaster){
                <p class="px-0.5 py-1 font-xs font-grey-700 w-full block text-center">Waiting for players to join the room.</p>
            }
        }
    </moveable-modal>
