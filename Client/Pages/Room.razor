                                            </i>
                                        }
                                        @if(@Tabletop.IsGameMaster){
                                            PlayerEntity player = Tabletop.Players[i];
                                            <button @onclick="@(e => Hub.KickPlayer(player))" title="Kick player" aria-label="kick @Tabletop.Players[i].Name">
